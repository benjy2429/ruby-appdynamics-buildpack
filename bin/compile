#!/usr/bin/env bash
set -e

BUILD_DIR=$1
CACHE_DIR=$2
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
LP_DIR=`cd $(dirname $0); cd ..; pwd`

AD_SDK_DIR="$BUILD_DIR/appdynamics"

mkdir -p $AD_SDK_DIR

tar xvzf "$SCRIPT_DIR/appdynamics-sdk-native-64bit-linux-4.2.6.1.tar.gz" -C "$AD_SDK_DIR/"
export AD_SHARED_LIBRARY_PATH="$AD_SDK_DIR/appdynamics-sdk-native/sdk_lib/lib/libappdynamics_native_sdk.so"
echo "AD_SHARED_LIBRARY_PATH=$AD_SDK_DIR/appdynamics-sdk-native/sdk_lib/lib/libappdynamics_native_sdk.so"  > "$LP_DIR/export"

# Run the proxy
nohup $AD_SDK_DIR/appdynamics-sdk-native/runSDKProxy.sh &>/dev/null &