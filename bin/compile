#!/usr/bin/env bash
set -e

BUILD_DIR=$1
CACHE_DIR=$2
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

AD_SDK_DIR="$CACHE_DIR/appdynamics"

tar xvzf "$SCRIPT_DIR/appdynamics-sdk-native-64bit-linux-4.2.6.1.tar.gz" -C "$AD_SDK_DIR/"
export AD_SHARED_LIBRARY_PATH="$AD_SDK_DIR/appdynamics-sdk-native/sdk_lib/lib/libappdynamics_native_sdk.so"

# Run the proxy
$AD_SDK_DIR/appdynamics-sdk-native/runSDKProxy.sh