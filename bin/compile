#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

mkdir -p /var/cache/apt/archives/partial
apt-get autoclean

apt-get update
apt-get install -yy --quiet build-essential swig
apt-get install -yy --quiet software-properties-common language-pack-en

tar xvzf "$DIR/bin/compile/appdynamics-sdk-native-64bit-linux-4.2.6.1.tar.gz" -C /opt
sh /opt/appdynamics-sdk-native/install.sh

# Run the proxy
chown $USER -R /opt/appdynamics-sdk-native
sudo /opt/appdynamics-sdk-native/runSDKProxy.sh